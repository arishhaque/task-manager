<%= link_to('Back to Homepage', {controller: 'home', action: 'index'}) %><br />
<style>
table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}
th, td {
  padding: 5px;
}
th {
  text-align: left;
}
</style>
<div class="tasks index">
  <h2>Tasks</h2>

  <%= link_to("Add New Task", new_task_path, class: 'action new') %>

  <table class="listing" summary="Task list" style="width: 100%;">
    <tr class="header">
      <th>Task #</th>
      <th>Name</th>
      <th>Completed</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
    <% @tasks.each do |task| %>
    <tr>
      <td style="padding: 5px;"><%= task.id %></td>
      <td style="padding: 5px;"><%= task.name %></td>
      <td style="padding: 5px;"><%= task.status %></td>
      <td style="padding: 5px;"><%= task.category&.name || '-' %></td>
      <td class="actions">
        <%= link_to("Show", task_path(task), class: 'action show') %> <strong> | </strong>
        <%= link_to("Edit", edit_task_path(task), class: 'action edit') %> <strong> | </strong>
        <%= link_to("Delete", delete_task_path(task), class: 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
