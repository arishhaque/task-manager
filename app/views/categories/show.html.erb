<%= link_to("Back to List", categories_path, class: 'back-link') %>

<div class="Category show">
  <h2>Show Category</h2>

  <div class="actions">
    <%= link_to('Edit', edit_category_path(@category)) %> <strong> | </strong>
    <%= link_to('Delete', delete_category_path(@category)) %>
  </div>

  <table summary="Category detail view">
    <tr>
      <th>Name</th>
      <td><%= @category.name %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @category.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @category.updated_at %></td>
    </tr>
  </table>

</div>
